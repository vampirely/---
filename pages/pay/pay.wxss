/* pages/pay/pay.wxss */
.user {
  border-radius: 20rpx;
  background-color: white;
  margin: 10rpx;
}
.user .user_info {
  display: flex;
}
.user .user_info .user_name {
  margin: 10rpx;
  font-weight: bold;
  flex: 1;
}
.user .user_info .user_phone {
  margin: 10rpx;
  flex: 7;
}
.user .user_info .icon-dizhi {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.user .user_address {
  display: flex;
  margin: 10rpx;
  font-weight: bold;
}
page {
  background-color: whitesmoke;
  padding-bottom: 90rpx;
}
.cart_content .cart_main .cart_item {
  display: flex;
  margin: 10rpx;
  background-color: white;
  border-radius: 20rpx;
}
.cart_content .cart_main .cart_item .cart_image {
  flex: 2;
}
.cart_content .cart_main .cart_item .cart_image image {
  padding-left: 20rpx;
  width: 80%;
}
.cart_content .cart_main .cart_item .cart_goodsinfo {
  flex: 4;
}
.cart_content .cart_main .cart_item .cart_goodsinfo .cart_goods_name {
  font-size: 28rpx;
  margin-bottom: 20rpx;
  display: -webkit-box;
  overflow: hidden;
  padding-top: 20rpx;
  padding-right: 20rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.cart_content .cart_main .cart_item .cart_goodsinfo .cart_goods_pricewrap {
  display: flex;
  justify-content: space-between;
}
.cart_content .cart_main .cart_item .cart_goodsinfo .cart_goods_pricewrap .cart_goods_price {
  font-size: 34rpx;
  color: var(--themeColor);
}
.cart_content .cart_main .cart_item .cart_goodsinfo .cart_goods_pricewrap .cart_num_tool {
  margin-right: 10rpx;
  display: flex;
}
.cart_content .cart_main .cart_item .cart_goodsinfo .cart_goods_pricewrap .cart_num_tool .goods_num {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer_tool {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background-color: white;
  display: flex;
}
.footer_tool .total_price_wrap {
  flex: 4;
  margin-right: 15rpx;
  text-align: right;
}
.footer_tool .total_price_wrap .total_price .total_price_text {
  color: var(--themeColor);
  font-size: 34rpx;
  font-weight: bold;
}
.footer_tool .order_pay_wrap {
  flex: 3;
  background-color: var(--themeColor);
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
}
