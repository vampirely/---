@import "./goods_list.skeleton.wxss";
.first_tab .goods_item {
  background-color: white;
  margin: 10rpx;
  border-radius: 20rpx;
  display: flex;
}
.first_tab .goods_item .goods_img {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.first_tab .goods_item .goods_img image {
  padding: 5rpx;
  height: auto;
  width: 65%;
}
.first_tab .goods_item .good_info {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.first_tab .goods_item .good_info .goods_name {
  display: -webkit-inline-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.first_tab .goods_item .good_info .goods_price {
  color: var(--themeColor);
}
page {
  background-color: whitesmoke;
}
