<view class="first_tab">
    <navigator class="goods_item" hover-class="none" wx:for="{{collectObj}}" wx:key="goods_id" wx:for-item="item1" url="/pages/goods_detail/goods_detail?goods_id={{item1.goods_id}}">
        <!-- 左侧 图片 -->
        <view class="goods_img">
            <image mode="widthFix" lazy-load="{{true}}" src="{{item1.goods_small_logo}}"></image>
        </view>
        <!-- 右侧 商品信息 -->
        <view class="good_info">
            <view class="goods_name">{{item1.goods_name}}</view>
            <view class="goods_price">¥{{item1.goods_price}}</view>
            <view class="goods_cancel" bindtap="handleCollectCancel">取消收藏</view>
        </view>
        <!-- 右侧 价格 -->
    </navigator>
</view>
