page {
  background-color: whitesmoke;
}
.first_tab .goods_item {
  background-color: white;
  margin: 10rpx;
  border-radius: 20rpx;
  display: flex;
  box-shadow: 0rpx 0rpx 10rpx #c8c8c8;
}
.first_tab .goods_item .goods_img {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.first_tab .goods_item .goods_img image {
  padding: 5rpx;
  height: auto;
  width: 65%;
}
.first_tab .goods_item .good_info {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.first_tab .goods_item .good_info .goods_name {
  display: -webkit-inline-box;
  overflow: hidden;
}
.first_tab .goods_item .good_info .total_price {
  text-align: right;
}
.first_tab .goods_item .good_info .goods_price_wrap {
  display: flex;
  font-size: 24rpx;
}
.first_tab .goods_item .good_info .goods_price_wrap .goods_price {
  color: var(--themeColor);
}
.first_tab .goods_item .good_info .goods_price_wrap .goods_num {
  color: #c4c4c4;
}
.first_tab .goods_item .good_info .total_price_wrap {
  display: flex;
  font-size: 26rpx;
}
.first_tab .goods_item .good_info .total_price_wrap .tip {
  text-align: right;
}
.first_tab .goods_item .good_info .total_price_wrap .total_price {
  color: var(--themeColor);
  font-weight: bold;
}
.first_tab .goods_item .good_info .address {
  font-size: 20rpx;
  color: gray;
}
.first_tab .goods_item .good_info .btn_wrap {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 10rpx;
}
.first_tab .goods_item .good_info .btn_wrap .btn_del {
  text-align: center;
  width: 120rpx;
  font-size: 24rpx;
  background-color: red;
  color: white;
  border-radius: 20rpx;
  padding: 5rpx;
  margin-right: 20rpx;
}
.first_tab .goods_item .good_info .btn_wrap .btn_sure {
  text-align: center;
  width: 120rpx;
  font-size: 24rpx;
  background-color: orange;
  color: white;
  border-radius: 20rpx;
  padding: 5rpx;
  margin-right: 20rpx;
}
.first_tab .goods_item .good_info .btn_wrap .btn_comment {
  text-align: center;
  width: 120rpx;
  font-size: 24rpx;
  background-color: orange;
  color: white;
  border-radius: 20rpx;
  padding: 5rpx;
  margin-right: 20rpx;
}
.first_tab .goods_item .good_info .goods_cancel {
  text-align: right;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  color: var(--themeColor);
  margin-left: 300rpx;
}
