.info_wrap {
  margin: 5rpx;
  border-radius: 20rpx;
  box-shadow: 0rpx 0rpx 10rpx #969696;
  background-color: white;
}
.info_wrap .detal_swiper swiper {
  height: 65vw;
  text-align: center;
}
.info_wrap .detal_swiper swiper image {
  margin-bottom: 50rpx;
  width: 65%;
}
.info_wrap .goods_price {
  margin-left: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: var(--themeColor);
}
.info_wrap .goods_name_view {
  display: flex;
  border-top: 1rpx solid #c7c7c7;
}
.info_wrap .goods_name_view .goods_name {
  margin-bottom: 15rpx;
  flex: 5;
  color: black;
  font-size: 30rpx;
  padding: 0 10rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.info_wrap .goods_name_view .goods_collect {
  display: flex;
  flex-direction: column;
  flex: 1;
  justify-content: center;
  align-items: center;
  border-left: 1rpx solid #c7c7c7;
}
.info_wrap .goods_name_view .goods_collect .icon-aixin {
  color: var(--themeColor);
}
.info_wrap .goods_name_view .goods_collect .collect_text {
  color: gray;
}
.goods_comment_wrap {
  border-radius: 20rpx;
  margin: 10rpx;
  background-color: white;
}
.goods_comment_wrap .goods_comment_navi {
  display: flex;
}
.goods_comment_wrap .goods_comment_navi .goods_comment {
  flex: 1;
  margin: 10rpx;
  font-weight: bold;
}
.goods_comment_wrap .goods_comment_navi .icon-more {
  flex: 1;
  margin: 10rpx;
  text-align: right;
  font-size: 28rpx;
  color: coral;
}
.goods_info {
  border-radius: 20rpx;
  margin: 10rpx;
  background-color: white;
}
.goods_info .goods_info_title {
  margin: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: var(--themeColor);
}
.goods_info .goods_info_content {
  margin: 10rpx;
}
.goods_info .goods_info_content .goods_all_name {
  color: #969696;
}
.bottom_tool {
  border-top: 1rpx solid #c7c7c7;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: white;
  display: flex;
}
.bottom_tool .tool_item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  position: relative;
  font-size: 24rpx;
}
.bottom_tool .tool_item button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.bottom_tool .btn_cart {
  display: flex;
  font-size: 30rpx;
  font-weight: bold;
  justify-content: center;
  align-items: center;
  color: white;
  background-color: #ffb700;
  flex: 2;
}
.bottom_tool .btn_buy {
  display: flex;
  font-size: 30rpx;
  font-weight: bold;
  justify-content: center;
  align-items: center;
  color: white;
  background-color: var(--themeColor);
  flex: 2;
}
page {
  padding-bottom: 90rpx;
  background-color: whitesmoke;
}
